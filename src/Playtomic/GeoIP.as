it's a view or not		 */		public static function Lookup(callback:Function):void		{			PRequest.Load(SECTION, LOAD, LookupComplete, callback);		}					/**		 * Processes the response received from the server, returns the data and response to the user's callback		 * @param	callback	The user's callback function		 * @param	postdata	The data that was posted		 * @param	data		The XML returned from the server		 * @param	status		The request status returned from the esrver (1 for success)		 * @param	errorcode	The errorcode returned from the server (0 for none)		 */		private static function LookupComplete(callback:Function, postdata:Object, data:XML = null, response:Response = null):void		{			if(callback == null)				return;							var result:Object = {Code: "N/A", Name: "UNKNOWN"};			if(response.Success)			{								result["Code"] = data["location"]["code"];				result["Name"] = data["location"]["name"];			}						callback(result, response);			postdata = postdata;		}	}}